[insert_hook]
case "OBSCord Snap":{
	OBSCordSnap(SAMMIJSON.webhookURL,SAMMIJSON.obswsURL,SAMMIJSON.obswsPass,SAMMIJSON.sourceName,SAMMIJSON.filePath, SAMMIJSON.optionalText);
} break
[insert_script]
async function OBSCordSnap(webhookURL, obswsURL, obswsPass, sourceName, filePath, optionalText) {
    function Base64ToBlob(b64Data, contentType, sliceSize) {
        contentType = contentType || '';
        sliceSize = sliceSize || 512;

        var byteCharacters = atob(b64Data);
        var byteArrays = [];

        for (var offset = 0; offset < byteCharacters.length; offset += sliceSize) {
            var slice = byteCharacters.slice(offset, offset + sliceSize);

            var byteNumbers = new Array(slice.length);
            for (var i = 0; i < slice.length; i++) {
                byteNumbers[i] = slice.charCodeAt(i);
            }

            var byteArray = new Uint8Array(byteNumbers);

            byteArrays.push(byteArray);
        }

        var blob = new Blob(byteArrays, { type: contentType });
        return blob;
    }

    if (filePath.includes('%')) {
        SAMMI.alert("OBSCordSnap: You have used a % in your filePath variable. Please use absolute file paths!");
        SAMMI.alert("Absolute paths look like this: C:/foldername/filename.png");
        return
    }

    obswsURL = obswsURL || 'localhost:4455';
    if (!(obswsURL.startsWith("ws://") || obswsURL.startsWith("wss://")))
        obswsURL = "ws://" + obswsURL;
    obswsPass = obswsPass || '';
    optionalText = (optionalText === '0') ? '' : (optionalText || '');

    const obs = new OBSWebSocket();

    await obs.connect(obswsURL, obswsPass);

    try {
        let screenshotData = await obs.call('GetSourceScreenshot', {
            "sourceName": sourceName,
            "imageFormat": "png"
        });

        if(filePath)
          await obs.call('SaveSourceScreenshot', {
            "sourceName": sourceName,
            "imageFormat": "png",
            "imageFilePath": filePath
        });

        let imgFile = (screenshotData.imageData);
        let block = imgFile.split(";");
        let contentType = block[0].split(":")[1];
        let encodedImage = block[1].split(",")[1];
        let blob = Base64ToBlob(encodedImage, contentType);

        let formData = new FormData();
        formData.append("image", blob, "OBSCord Snap.png");
        formData.append("payload_json", `{"content": "${optionalText}"}`);

        let requestOptions = {
            method: 'POST',
            body: formData,
            redirect: 'follow'
        };

        let response = await fetch(webhookURL, requestOptions);

        if (response.status == 401) {
            throw "Invalid webhookURL or webhook Token."
        }

        SAMMI.alert("Screenshot saved to discord!");

    } catch (error) {
        if (typeof error === 'object') {
            error = error.message;
        }

        if (typeof error === 'string')
            SAMMI.alert(error);

        console.error(error)
    } finally {
        await obs.disconnect();
    }
}

